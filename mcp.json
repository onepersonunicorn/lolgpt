{
  "name": "lolgpt",
  "version": "1.0.0",
  "description": "AI-powered League of Legends mock match simulator and summoner comparison tool",
  "author": "LoL Mock Match Team",
  "homepage": "https://1tier.xyz",
  "repository": "https://github.com/onepersonunicorn/lolgpt",
  "license": "MIT",
  "categories": ["gaming", "esports", "simulation", "analytics"],
  "keywords": ["mcp", "league-of-legends", "lol", "summoner", "mock-match", "simulation", "esports", "gaming", "riot-games", "summoners-rift", "prediction", "pvp", "comparison"],
  "runtime": "python",
  "entrypoint": "main.py",
  "connection": {
    "type": "server",
    "command": "python",
    "args": ["main.py"]
  },
  "tools": [
    {
      "name": "league_of_legends_mock_match",
      "description": "Mock match between two League of Legends players with detailed statistics and match progression",
      "parameters": {
        "uidA": {
          "type": "string",
          "description": "Riot ID of the first summoner",
          "required": true
        },
        "tagA": {
          "type": "string", 
          "description": "Tag of the first summoner",
          "required": true
        },
        "uidB": {
          "type": "string",
          "description": "Riot ID of the second summoner",
          "required": true
        },
        "tagB": {
          "type": "string",
          "description": "Tag of the second summoner", 
          "required": true
        },
        "lang": {
          "type": "string",
          "description": "Language for the simulation (EN, 한국어, 繁體中文, 日本語, ESPAÑOL, বাংলা, ਪੰਜਾবী)",
          "default": "EN"
        }
      },
      "returns": "Detailed mock match simulation with summoner statistics from last 10 games and 10-phase match progression"
    },
    {
      "name": "predict_league_of_legends_match",
      "description": "Predict the outcome of a League of Legends match between two players",
      "parameters": {
        "summoner1_id": {
          "type": "string",
          "description": "First summoner's Riot ID",
          "required": true
        },
        "summoner1_tag": {
          "type": "string",
          "description": "First summoner's tag",
          "required": true
        },
        "summoner2_id": {
          "type": "string", 
          "description": "Second summoner's Riot ID",
          "required": true
        },
        "summoner2_tag": {
          "type": "string",
          "description": "Second summoner's tag",
          "required": true
        },
        "language": {
          "type": "string",
          "description": "Simulation language",
          "default": "ENGLISH"
        }
      },
      "returns": "Match prediction with detailed analysis and simulation"
    },
    {
      "name": "league_of_legends_who_will_win",
      "description": "Determine who will win between two League of Legends players",
      "parameters": {
        "player1_riot_id": {
          "type": "string",
          "description": "First player's Riot ID",
          "required": true
        },
        "player1_tag": {
          "type": "string",
          "description": "First player's tag", 
          "required": true
        },
        "player2_riot_id": {
          "type": "string",
          "description": "Second player's Riot ID",
          "required": true
        },
        "player2_tag": {
          "type": "string",
          "description": "Second player's tag",
          "required": true
        },
        "output_language": {
          "type": "string",
          "description": "Language for output",
          "default": "EN"
        }
      },
      "returns": "Winner prediction with detailed comparison and mock match simulation"
    },
    {
      "name": "league_of_legends_world_championship",
      "description": "Simulate a League of Legends World Championship style match between two players",
      "parameters": {
        "riot_id_a": {
          "type": "string",
          "description": "Riot ID of first summoner",
          "required": true
        },
        "tag_a": {
          "type": "string",
          "description": "Tag of first summoner",
          "required": true
        },
        "riot_id_b": {
          "type": "string",
          "description": "Riot ID of second summoner", 
          "required": true
        },
        "tag_b": {
          "type": "string",
          "description": "Tag of second summoner",
          "required": true
        },
        "sim_language": {
          "type": "string",
          "description": "Language for simulation text",
          "default": "EN"
        }
      },
      "returns": "Full World Championship style match simulation with phase-by-phase breakdown"
    },
    {
      "name": "league_of_legends_vs_match",
      "description": "League of Legends vs match simulation between two players",
      "parameters": {
        "first_summoner_id": {
          "type": "string",
          "description": "First summoner's Riot ID",
          "required": true
        },
        "first_summoner_tag": {
          "type": "string",
          "description": "First summoner's tag",
          "required": true
        },
        "second_summoner_id": {
          "type": "string",
          "description": "Second summoner's Riot ID",
          "required": true
        },
        "second_summoner_tag": {
          "type": "string",
          "description": "Second summoner's tag",
          "required": true
        },
        "match_language": {
          "type": "string",
          "description": "Language for match narration",
          "default": "EN"
        }
      },
      "returns": "Complete vs match simulation with statistics and battle progression"
    },
    {
      "name": "league_of_legends_next_match",
      "description": "Predict the next League of Legends match outcome between two players",
      "parameters": {
        "summoner_a_id": {
          "type": "string",
          "description": "First summoner's Riot ID",
          "required": true
        },
        "summoner_a_tag": {
          "type": "string",
          "description": "First summoner's tag",
          "required": true
        },
        "summoner_b_id": {
          "type": "string",
          "description": "Second summoner's Riot ID",
          "required": true
        },
        "summoner_b_tag": {
          "type": "string",
          "description": "Second summoner's tag",
          "required": true
        },
        "prediction_language": {
          "type": "string",
          "description": "Language for prediction output",
          "default": "ENGLISH"
        }
      },
      "returns": "Next match prediction with detailed analysis and simulation"
    }
  ],
  "requirements": [
    "fastmcp>=0.1.0",
    "requests>=2.28.0"
  ],
  "python_version": ">=3.10",
  "configuration": {
    "debug": {
      "type": "boolean",
      "description": "Enable debug mode for detailed logging",
      "default": false
    },
    "lol_api_url": {
      "type": "string",
      "description": "Base URL for League of Legends API",
      "default": "https://1tier.xyz"
    }
  },
  "permissions": {
    "network": {
      "description": "Required to fetch summoner data and run match simulations from League of Legends API",
      "hosts": ["1tier.xyz"]
    }
  },
  "disclaimer": "League of Legends mock match simulations are for entertainment purposes only. Results are based on historical performance data and do not guarantee actual match outcomes. League of Legends is a trademark of Riot Games, Inc.",
  "tags": ["mcp", "league-of-legends", "lol", "summoner", "mock-match", "simulation", "esports", "gaming", "riot-games", "summoners-rift", "prediction", "pvp", "comparison"]
}